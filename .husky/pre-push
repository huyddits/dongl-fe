# .husky/pre-push
#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running pre-push checks..."

# Run full test suite
echo "🧪 Running full test suite..."
npm run test -- --watchAll=false

# Run build to ensure everything compiles
echo "🏗️  Building project..."
npm run build

echo "✅ Pre-push checks passed!"